{
    "src_folders": ["tests"],
    "output_folder": "logs",
    "custom_commands_path": "",
    "custom_assertions_path": "",
    "page_objects_path": "",
    "globals_path": "",

    "selenium": {
        "start_process": false
    },

    "test_settings": {
        "default": {
            "globals_path": "dev/globals.js",
            "output_folder": "dev/logs",

            "selenium_port": 9515,
            "selenium_host": "localhost",
            "default_path_prefix": "",

            "desiredCapabilities": {
                "browserName": "chrome",
                "chromeOptions": {
                    "args": ["--no-sandbox", "--headless", "--disable-gpu"],
                    "binary": "/usr/bin/chromium-browser"
                },
                "acceptSslCerts": true
            }
        },
        "qas": {
            "globals_path": "qas/globals.js",
            "output_folder": "dev/logs"
        },
        "prod": {
            "globals_path": "prod/globals.js",
            "output_folder": "prod/logs"
        }
    }
}
